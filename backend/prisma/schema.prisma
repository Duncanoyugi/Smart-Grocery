generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  name             String
  email            String    @unique
  password         String
  role             String    @default("CUSTOMER")
  isVerified       Boolean   @default(false)
  otp              String?
  otpExpiresAt     DateTime?
  verificationCode String?
  avatarUrl        String?
  avatarPublicId   String?   // ‚Üê ADD THIS for Cloudinary public_id
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  store            Store?
  
  orders Order[]
}

model Store {
  id       String    @id @default(uuid())
  name     String
  location String
  ownerId  String    @unique // Ensures one store per user
  owner    User      @relation(fields: [ownerId], references: [id])
  products Product[]
}

model Product {
  id          String    @id @default(uuid())
  name        String
  description String?
  price       Float
  stock       Int
  expiryDate  DateTime?
  imageUrl    String?
  storeId     String
  store       Store     @relation(fields: [storeId], references: [id])
  createdAt   DateTime  @default(now())
}

model Order {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  total     Float
  status    String   @default("PENDING") // Replaces OrderStatus enum
  createdAt DateTime @default(now())
}
